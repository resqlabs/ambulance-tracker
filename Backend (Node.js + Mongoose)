const UserSchema = new mongoose.Schema({
  name: String,
  phone: String,
  email: String,
}, { timestamps: true });

const EmergencyContactSchema = new mongoose.Schema({
  userId: mongoose.Schema.Types.ObjectId,
  name: String,
  phone: String,
  relation: String,
}, { timestamps: true });

const SOSAlertSchema = new mongoose.Schema({
  userId: mongoose.Schema.Types.ObjectId,
  latitude: Number,
  longitude: Number,
  status: String,
}, { timestamps: true });
